generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ------------------------------- Student Schema -------------------------
model Student {
  id             Int            @id @default(autoincrement())
  first_name     String?
  last_name      String?
  mid_name       String?
  school_email   String         @unique
  personal_email String
  department     String?
  course         String?
  major          String?
  nickname       String?
  suffix         String?
  thesis_title   String?
  updated_at     DateTime       @updatedAt
  created_at     DateTime       @default(now())
  student_number Int            @unique
  studentAuth    StudentAuth?
  studentDetail  StudentDetail?
  booking        Booking[]
}

model StudentDetail {
  id              Int      @id 
  birth_date      DateTime
  province        String?
  city            String?
  barangay        String?
  mothers_name    String?
  fathers_name    String?
  guardians_name  String?
  contact_num     String?
  student         Student  @relation(fields: [id], references: [id], onDelete: Cascade)
}

model StudentAuth {
  is_verified     Boolean         @default(false)
  hashed_password String?
  last_login      DateTime?
  student_number  Int             @id
  status          StudentStatus   @default(REGISTERED) 
  student         Student         @relation(fields: [student_number], references: [student_number], onDelete: Cascade)
}

enum StudentStatus {
  REGISTERED 
  APPROVED 
  BOOKED 
  ATTENDED 
  FULLY_VERIFIED
}
// ---------------------------------------------------------------------


// ------------------------------- Admin Schema -------------------------
model Admin {
  id                Int       @id @default(autoincrement())
  email             String?   @unique 
  first_name        String?
  last_name         String?
  hashed_password   String
  last_login        DateTime?
  logs              Logs[]
}

model Logs {
  id          Int       @id @default(autoincrement())
  action      String
  created_at  DateTime  @default(now())
  admin       Admin     @relation(fields: [id], references: [id])
}
// ---------------------------------------------------------------------


// ------------------------------- Booking Schema -------------------------
model BookingDay {
  id                  Int       @id @default(autoincrement())
  date                DateTime  @unique
  is_open             Boolean   @default(true)
  curr_morning        Int       @default(0)
  curr_afternoon      Int       @default(0)
  max_morning_cap     Int  
  max_afternoon_cap   Int
  bookings            Booking[]
}

model Booking {
  id              Int         @id @default(autoincrement())
  student_number  Int         
  booking_day_id  Int         
  period          String
  created_at      DateTime    @default(now())
  booking_day     BookingDay  @relation(fields: [booking_day_id], references: [id], onDelete: Cascade) 
  student         Student     @relation(fields: [student_number], references: [student_number], onDelete: Cascade)
}
// ---------------------------------------------------------------------