generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Student {
  id             Int            @id @default(autoincrement())
  first_name     String?
  last_name      String?
  mid_name       String?
  school_email   String         @unique
  personal_email String
  department     String?
  course         String?
  major          String?
  nickname       String?
  suffix         String?
  thesis_title   String?
  updatedAt      DateTime       @updatedAt
  createdAt      DateTime       @default(now())
  student_number Int            @unique
  StudentAuth    StudentAuth?
  studentDetail  StudentDetail?
}

model StudentDetail {
  id              Int      @id @unique
  birth_date      DateTime
  province        String?
  city            String?
  barangay        String?
  mothers_name    String?
  fathers_name    String?
  guardians_name  String?
  contact_num     String?
  student         Student  @relation(fields: [id], references: [id])
}

model StudentAuth {
  is_verified     Boolean   @default(false)
  hashed_password String?
  last_login      DateTime?
  student_number  Int       @id
  student         Student   @relation(fields: [student_number], references: [student_number])
}

model Admin {
  id                Int       @id
  email             String?   @unique 
  first_name        String?
  last_name         String?
  hashed_password   String
  last_login        DateTime?
  logs              Logs[]
}

model Logs {
  id      Int       @id
  action  String
  doneAt  DateTime  @default(now())
  admin   Admin     @relation(fields: [id], references: [id])
}