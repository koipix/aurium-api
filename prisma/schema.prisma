generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Student {
  id              Int       @id @default(autoincrement())
  school_email    String    @unique
  personal_email  String
  last_name       String
  first_name      String
  mid_name        String?
  suffix          String?
  nickname        String?
  birth_date      DateTime
  course          String?
  major           String?
  thesis_title    String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  //TODO: still lacking for important details, will add later...

  //normalization
  studentNumber   StudentNumber? 
}

model StudentNumber {
  student_id      Int       @id @unique
  student_number  Int       @unique
  is_verified     Boolean   @default(false)

  //relation from Student table..
  student         Student?   @relation(fields: [student_id], references: [id])
}
